@model EntityLayer.Concreate.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Blog Oluştur</h1>
<br />
@using (Html.BeginForm("BlogAdd","Blog", FormMethod.Post))
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle, new {@class ="form-control"})
    @Html.ValidationMessageFor(x=>x.BlogTitle)
    <br />
    @Html.Label("Blog Görseli")
    @Html.TextBoxFor(x=>x.Image, new {@class ="form-control"})
    @Html.ValidationMessageFor(x=>x.Image)
    <br />
    @Html.Label("Blog Küçük Görseli")
    @Html.TextBoxFor(x=>x.BlogThumbnailImage, new {@class ="form-control"})
    <br />
    @Html.Label("Blog Kategorisi")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.kategori, new {@class ="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.BlogContent,10,5, new {@class ="form-control"})
    @Html.ValidationMessageFor(x=>x.BlogContent)
    <br />
    <button class="btn btn-info">Oluştur !</button>
}

