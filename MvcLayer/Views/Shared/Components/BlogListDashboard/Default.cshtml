@using EntityLayer.Concreate 
@model List<Blog>
  <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Son 10 Blog</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> Blog </th>
                            <th> Kategori </th>
                            <th> Tarih </th>
                            <th> Yazar </th>
                            <th> Detaylar </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                 <tr>
                            <td>
                              <img src="@item.Image" class="mr-2" alt="image">
                            </td>
                            <td>@item.BlogTitle</td>
                            <td>
                              <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                            </td>
                            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
                            <td> @item.WriterID </td>
                            <td><a class="btn btn-gradient-dark" href="/Blog/BlogDetails/@item.BlogID"> Detaylar </a> </td>
                          </tr>
                            }
                         
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
	