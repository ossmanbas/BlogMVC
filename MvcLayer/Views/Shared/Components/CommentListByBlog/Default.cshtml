@model IEnumerable<EntityLayer.Concreate.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <h2>Daha önce yorum yapılmamış , İLK Yorumu BIRAK !</h2>
    }
    else
    {
        @foreach (var item in Model)
        {

            <div class="media">
                <img src="~/CoreBlogTema-main/CoreBlogTema-main/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUsername</h5>

                    <p>@item.CommentContent</p>

                </div>
            </div>
        }
    }
</div>